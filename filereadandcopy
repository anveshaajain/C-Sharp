using System;
using System.IO;

class Program
{
    static void Main()
    {
        string sourcePath = @"C:\Users\Student\Desktop\Anvesha-C#\source.txt";
        string destPath = @"C:\Users\Student\Desktop\Anvesha-C#\destination.txt";

        string content = File.ReadAllText(sourcePath);
        File.WriteAllText(destPath, content);

        Console.WriteLine("File copied successfully.");
    }
}

